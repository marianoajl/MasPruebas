                        <div class="invalid-feedback">Ingrese Habitación / Departamento</div>
                    </div>
                    <div class="form-floating">
                        <select class="js-select form-select" placeholder="Código país" required>
                            <option value="" selected disabled>Código país</option>
                            <option value="2">+54</option>
                            <option value="3">+51</option>
                            <option value="4">+59</option>
                        </select>
                        <label for="floatingInput">Código país</label>
                        <div class="invalid-feedback">Código país</div>
                    </div>
                    <div class="form-floating tel">
                        <input type="number" class="form-control" placeholder="Teléfono" required>
                        <label for="floatingPassword">Teléfono</label>
                        <div class="invalid-feedback">Ingrese teléfono</div>
                    </div>
                    <div class="form-floating">
                        <select class="js-select form-select" placeholder="Código país">
                            <option value="" selected disabled>Código país</option>
                            <option value="2">+54</option>
                            <option value="3">+51</option>
                            <option value="4">+59</option>
                        </select>
                        <label for="floatingInput">Código país</label>
                    </div>
                    <div class="form-floating tel-alt">
                        <input type="number" class="form-control" placeholder="Teléfono alternativo">
                        <label for="floatingPassword">Teléfono alternativo</label>
                    </div>
                    <div class="form-floating assistance__hotel">
                        <input type="email" class="form-control" placeholder="Email" required>
                        <label for="floatingInput">Email</label>
                        <div class="invalid-feedback">Ingrese email</div>
                    </div>
                </section>
                <button type="submit" class="btn btn-outline-primary">continuar</button>
            </form>
        </article>
    </section>
{% endblock %}

