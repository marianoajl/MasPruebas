                    <div class="form-floating assistance__hotel">
                        <input type="date" class="form-control" placeholder="Nombre" required>
                        <label for="floatingInput">Hotel / lugar</label>
                        <div class="invalid-feedback">Ingrese Hotel / lugar</div>
                    </div>
                    <div class="form-floating assistance__habitacion">
                        <input type="text" class="form-control" placeholder="Apellido" required>
